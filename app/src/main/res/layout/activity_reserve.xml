<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context="com.example.jisung.herh.ReserveActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="@color/loginButton"
        android:orientation="vertical">
        <TextView
            android:layout_gravity="center"
            android:textColor="@color/text"
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="한신포차"
            android:textSize="20dp"/>
        <TextView
            android:gravity="center"
            android:textColor="@color/text"
            android:text="2017년 6월 20일"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>


    <TextView

        android:gravity="center"
        android:layout_weight="5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="인원"
        android:background="@color/col1"
        android:textColor="@color/text"
        android:textSize="20dp"/>
    <LinearLayout

        android:layout_weight="20"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="100">
        <EditText
            android:inputType="number"
            android:textSize="30dp"
            android:textColor="@color/text"
            android:id="@+id/peoplepick"
            android:layout_marginLeft="50dp"
            android:layout_weight="20"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:textColor="@color/text"

            android:layout_weight="30"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="명"
            android:textSize="20dp"
            android:gravity="center"/>
        <NumberPicker
            android:id="@+id/error"
            android:layout_marginLeft="20dp"
            android:layout_weight="20"
            android:layout_width="0dp"
            android:layout_height="match_parent"></NumberPicker>
        <TextView
            android:textColor="@color/text"
            android:layout_weight="30"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="오차인원"
            android:textSize="20dp"
            android:gravity="center"/></LinearLayout>

    <TextView
        android:background="@color/col1"
        android:textColor="@color/text"
        android:layout_marginTop="10dp"
        android:layout_weight="5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="예약시간"
        android:gravity="center"
        android:textSize="20dp"/>

    <TimePicker
        android:id="@+id/time"
        android:layout_weight="20"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:timePickerMode="spinner"></TimePicker>

    <TextView
        android:textColor="@color/text"

        android:gravity="center"
        android:layout_weight="8"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/col1"

        android:text="예약자 명"
        android:textSize="20dp"/>

    <EditText
        android:textColorHint="@color/text"
        android:textColor="@color/text"
        android:gravity="center"
        android:id="@+id/name"
        android:layout_weight="8"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:hint="ex)학회 알파"/>

    <TextView
        android:background="@color/col1"
        android:textColor="@color/text"
        android:gravity="center"
        android:layout_weight="8"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="연락처"
        android:textSize="20dp"/>

    <EditText
        android:gravity="center"
        android:textColor="@color/text"
        android:id="@+id/phoneNum"
        android:layout_weight="8"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:inputType="number"
        />

    <Button
        android:background="@color/loginBtnOn"
        android:onClick="onClick"
        android:id="@+id/button"
        android:layout_weight="8"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="8dp"
        android:text="예약"
        />

</LinearLayout>